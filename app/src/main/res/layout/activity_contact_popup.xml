<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".ContactPopupActivity">

    <View
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@color/beige"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/popuptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titlebold"
        android:text="Contact Me!"
        android:textColor="@color/brown"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg"
        app:layout_constraintBottom_toBottomOf="@id/bg" />

    <TextView
        android:id="@+id/popuptext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/batangregular"
        android:text="어플에 대한 의견을 \n자유롭게 말씀해주세요!\n최대한 반영하려고 \n노력하겠습니다!!\n버그 제보, 의견 제안, 응원\n모두모두 환영해요~"
        android:lineSpacingExtra="10dp"
        android:textColor="@color/brown"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/openBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/kakaotalk_icon"
        android:fontFamily="@font/batangregular"
        android:text="카카오톡 오픈톡방"
        android:textColor="@color/orange"
        android:textSize="20dp"
        android:paddingStart="25dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/transparent_button"
        app:layout_constraintTop_toBottomOf="@id/popuptext" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="CANCEL"
        android:textSize="20dp"
        android:fontFamily="@font/titlemedium"
        android:textColor="@color/brown"
        android:background="@drawable/beige_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/openBtn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
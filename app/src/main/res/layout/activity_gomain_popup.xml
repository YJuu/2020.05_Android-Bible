<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/endQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/titlebold"
        android:text="시험을 종료할까요?"
        android:textColor="@color/darkbrown"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/titlelight"
        android:text="17문제를 풀었고, 3문제 남았어요!"
        android:textColor="@color/babybrown"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/endQ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/endQ" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계속하기"
        android:textSize="24dp"
        android:fontFamily="@font/titlemedium"
        android:textColor="@color/brown"
        android:stateListAnimator="@null"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toStartOf="@id/goMainBtn"
        app:layout_constraintTop_toBottomOf="@id/notice"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/transparent_button"
        />

    <Button
        android:id="@+id/goMainBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메인으로"
        android:textSize="24dp"
        android:fontFamily="@font/titlemedium"
        android:textColor="@color/brown"
        android:stateListAnimator="@null"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notice"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/transparent_button"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
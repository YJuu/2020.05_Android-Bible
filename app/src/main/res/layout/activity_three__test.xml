<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Three_TestActivity">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/actionModeCloseDrawable"
        android:backgroundTint="@color/pink"
        android:stateListAnimator="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHorizontal_bias="0.02"/>

    <TextView
        android:id="@+id/one_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="★"
        android:fontFamily="@font/titlebold"
        android:textColor="@color/yellow"
        android:textSize="40dp"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/backBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backBtn"
        app:layout_constraintHorizontal_bias="0.02"/>

    <TextView
        android:id="@+id/two_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="★"
        android:fontFamily="@font/titlebold"
        android:textColor="@color/yellow"
        android:textSize="40dp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toStartOf="@id/one_star"
        app:layout_constraintTop_toTopOf="@id/backBtn"/>

    <TextView
        android:id="@+id/three_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="★"
        android:fontFamily="@font/titlebold"
        android:textColor="@color/yellow"
        android:textSize="40dp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toStartOf="@id/two_star"
        app:layout_constraintTop_toTopOf="@id/backBtn"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Q. 01/20"
        android:fontFamily="@font/titlebold"
        android:textColor="@color/orange"
        android:textSize="30dp"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintHorizontal_bias="0.1"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/beige_button"
        android:text="완료"
        android:textColor="@color/darkbrown"
        android:textSize="24dp"
        android:fontFamily="@font/titlebold"
        android:textAlignment="center"
        android:lineSpacingExtra="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/question"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintBottom_toBottomOf="@id/question"/>

    <EditText
        android:id="@+id/line1"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:textSize="16dp"
        android:text="하나님의 아들을 믿는 믿음 안에서 사는 것이라"
        android:maxLength="25"
        android:singleLine="true"
        android:backgroundTint="@color/babybrown"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toTopOf="@id/line2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:theme="@style/EditTextStyle"/>

    <TextView
        android:id="@+id/line1ems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@id/line1"
        app:layout_constraintStart_toEndOf="@id/line1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"/>

    <EditText
        android:id="@+id/line2"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:textSize="16dp"
        android:text="하나님의 아들을 믿는 믿음 안에서 사는 것이라"
        android:maxLength="25"
        android:singleLine="true"
        android:backgroundTint="@color/babybrown"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toTopOf="@id/line3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:theme="@style/EditTextStyle"/>

    <TextView
        android:id="@+id/line2ems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@id/line2"
        app:layout_constraintStart_toEndOf="@id/line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"/>

    <EditText
        android:id="@+id/line3"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:textSize="16dp"
        android:text="하나님의 아들을 믿는 믿음 안에서 사는 것이라"
        android:maxLength="25"
        android:singleLine="true"
        android:backgroundTint="@color/babybrown"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toTopOf="@id/line4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:theme="@style/EditTextStyle"/>

    <TextView
        android:id="@+id/line3ems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@id/line3"
        app:layout_constraintStart_toEndOf="@id/line3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"/>

    <EditText
        android:id="@+id/line4"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:textSize="16dp"
        android:text="하나님의 아들을 믿는 믿음 안에서 사는 것이라"
        android:maxLength="25"
        android:singleLine="true"
        android:backgroundTint="@color/babybrown"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toTopOf="@id/line5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:theme="@style/EditTextStyle"/>

    <TextView
        android:id="@+id/line4ems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@id/line4"
        app:layout_constraintStart_toEndOf="@id/line4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"/>

    <EditText
        android:id="@+id/line5"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:textSize="16dp"
        android:text="하나님의 아들을 믿는 믿음 안에서 사는 것이라"
        android:maxLength="25"
        android:singleLine="true"
        android:backgroundTint="@color/babybrown"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toTopOf="@id/line6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:theme="@style/EditTextStyle"/>

    <TextView
        android:id="@+id/line5ems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@id/line5"
        app:layout_constraintStart_toEndOf="@id/line5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"/>

    <EditText
        android:id="@+id/line6"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:textSize="16dp"
        android:text="하나님의 아들을 믿는 믿음 안에서 사는 것이라"
        android:maxLength="25"
        android:singleLine="true"
        android:backgroundTint="@color/babybrown"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toTopOf="@id/line7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:theme="@style/EditTextStyle"/>

    <TextView
        android:id="@+id/line6ems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@id/line6"
        app:layout_constraintStart_toEndOf="@id/line6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"/>

    <EditText
        android:id="@+id/line7"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:text="하나님의 아들을 믿는 믿음 안에서 사는 것이라"
        android:maxLength="25"
        android:singleLine="true"
        android:backgroundTint="@color/babybrown"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.4"
        app:theme="@style/EditTextStyle"/>

    <TextView
        android:id="@+id/line7ems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@id/line7"
        app:layout_constraintStart_toEndOf="@id/line7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"/>


    <ImageView
        android:id="@+id/correct"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@id/question"
        app:layout_constraintEnd_toEndOf="@+id/question"
        app:layout_constraintTop_toTopOf="@id/question"
        app:layout_constraintBottom_toBottomOf="@id/question"
        app:srcCompat="@drawable/correct"/>

    <ImageView
        android:id="@+id/wrong"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/question"
        app:layout_constraintEnd_toEndOf="@+id/question"
        app:layout_constraintTop_toTopOf="@id/question"
        app:layout_constraintBottom_toBottomOf="@id/question"
        app:srcCompat="@drawable/wrong" />

</androidx.constraintlayout.widget.ConstraintLayout>